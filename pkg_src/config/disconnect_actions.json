{
    "client_actions": [
        {
            "process_id": "ur-mavdiscovery",
            "client_id": "*",
            "actions": [
                {
                    "action": "restart",
                    "command": "systemctl restart ur-mavdiscovery.service"
                }
            ]
        },
        {
            "process_id": "example-client",
            "client_id": "client_*",
            "actions": [
                {
                    "action": "reconnect",
                    "command": ""
                }
            ]
        },
        {
            "process_id": "critical-process",
            "client_id": "*",
            "actions": [
                {
                    "action": "custom",
                    "command": "/usr/local/bin/recovery_script.sh"
                },
                {
                    "action": "notify",
                    "command": "mqtt://admin/alerts"
                }
            ]
        },
        {
            "process_id": "*",
            "client_id": "*",
            "actions": [
                {
                    "action": "log",
                    "command": "Client disconnected"
                }
            ]
        }
    ]
}